<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/radius2"
    android:backgroundTint="#C9BAE7">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCodCredito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_bold"
            android:text="Crédito ID: 12"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNumCuotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredocka_regular"
            android:text="Cuotas: 12"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvValorCuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredocka_regular"
            android:text="Valor: 909090"
            android:textColor="#4E4D4D"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Right Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvInterés"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredocka_regular"
            android:text="Interés: 42"
            android:textColor="#4E4D4D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvCapital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredocka_regular"
            android:text="Capital Pagado: 127812"
            android:textColor="#4E4D4D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_bold"
            android:text="Saldo Restante: $100.00"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>