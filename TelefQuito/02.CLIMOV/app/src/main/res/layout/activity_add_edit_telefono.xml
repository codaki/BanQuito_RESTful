<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".view.AddEditTelefonoActivity"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@drawable/radius2"
        android:backgroundTint="#efefef"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:src="@drawable/radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="660px"
            android:layout_height="660px"
            android:layout_marginBottom="16dp"
            android:src="@drawable/oozma" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar TelÃ©fono"
            android:fontFamily="@font/fredoka_bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#0D6EFC"
            android:fontFamily="@font/fredoka_bold"
            android:padding="12dp"
            android:text="Seleccionar Imagen"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/fredocka_regular"
            android:hint="Marca"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#4E4D4D" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/fredocka_regular"
            android:hint="Nombre"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#4E4D4D" />

        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/fredocka_regular"
            android:hint="Precio"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#4E4D4D" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0D6EFC"
            android:fontFamily="@font/fredoka_bold"
            android:padding="12dp"
            android:text="Guardar"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>